# Frontend Environment Configuration
# Generated by Ansible on {{ ansible_date_time.iso8601 }}

# API Configuration
{% if api_base_url %}
VITE_API_BASE_URL=https://{{ api_base_url }}
{% else %}
VITE_API_BASE_URL={{ frontend_api_base_url | default('') }}
{% endif %}

# Environment
VITE_NODE_ENV={{ app_environment | default('production') }}

# Feature Flags
{% if feature_flags is defined %}
{% for flag, value in feature_flags.items() %}
VITE_FEATURE_{{ flag | upper }}={{ value | string | lower }}
{% endfor %}
{% endif %}

# Analytics (if applicable)
{% if analytics_id is defined %}
VITE_ANALYTICS_ID={{ analytics_id }}
{% endif %}
