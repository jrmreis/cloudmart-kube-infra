# Backend Environment Configuration
# Generated by Ansible on {{ ansible_date_time.iso8601 }}

PORT={{ app_backend_port | default(5000) }}
NODE_ENV={{ app_environment | default('production') }}

# AWS Configuration
AWS_REGION={{ aws_region }}
{% if aws_access_key_id is defined %}
AWS_ACCESS_KEY_ID={{ aws_access_key_id }}
{% endif %}
{% if aws_secret_access_key is defined %}
AWS_SECRET_ACCESS_KEY={{ aws_secret_access_key }}
{% endif %}

# Bedrock Configuration
BEDROCK_AGENT_ID={{ app_bedrock_agent_id }}
BEDROCK_AGENT_ALIAS_ID={{ app_bedrock_agent_alias_id }}

# OpenAI Configuration
OPENAI_API_KEY={{ app_openai_api_key }}
OPENAI_ASSISTANT_ID={{ app_openai_assistant_id }}

# Database Configuration (if applicable)
{% if database_url is defined %}
DATABASE_URL={{ database_url }}
{% endif %}

# Logging Configuration
LOG_LEVEL={{ app_log_level | default('info') }}

# CORS Configuration
{% if cors_origins is defined %}
CORS_ORIGINS={{ cors_origins | join(',') }}
{% endif %}
