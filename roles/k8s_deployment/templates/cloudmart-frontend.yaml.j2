apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ frontend_app_name }}
  namespace: "{{ k8s_namespace | default('default') }}"
  labels:
    app: {{ frontend_app_name }}
spec:
  replicas: {{ frontend_replicas | default('1') }}
  selector:
    matchLabels:
      app: {{ frontend_app_name }}
  template:
    metadata:
      labels:
        app: {{ frontend_app_name }}
      annotations:
        # This forces redeployment when the ConfigMap changes
        configmap-checksum: "{{ '{{' }} lookup('k8s', kind='ConfigMap', namespace=k8s_namespace | default('default'), resource_name='frontend-env-config') | to_json | hash('md5') {{ '}}' }}"
    spec:
      volumes:
      - name: env-config
        configMap:
          name: frontend-env-config
      containers:
      - name: frontend
        image: {{ frontend_image }}:{{ frontend_version | default('latest') }}
        resources:
          limits:
            memory: {{ frontend_memory_limit | default('512Mi') }}
            cpu: {{ frontend_cpu_limit | default('500m') }}
          requests:
            memory: {{ frontend_memory_request | default('256Mi') }}
            cpu: {{ frontend_cpu_request | default('250m') }}
        ports:
        - containerPort: {{ frontend_port | default('5001') }}
          name: http
        volumeMounts:
        - name: env-config
          mountPath: /app/.env
          subPath: .env
        readinessProbe:
          httpGet:
            path: /
            port: http
          initialDelaySeconds: 10
          periodSeconds: 5
        livenessProbe:
          httpGet:
            path: /
            port: http
          initialDelaySeconds: 15
          periodSeconds: 15
---
apiVersion: v1
kind: Service
metadata:
  name: {{ frontend_app_name }}
  namespace: "{{ k8s_namespace | default('default') }}"
spec:
  type: {{ frontend_service_type | default('ClusterIP') }}
  ports:
  - port: {{ frontend_service_port | default('5001') }}
    targetPort: {{ frontend_port | default('5001') }}
    protocol: TCP
    name: http
  selector:
    app: {{ frontend_app_name }}
